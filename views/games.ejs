<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Games - Game Inventory</title>
</head>
<body>
    <div class="container">
        <header>
            <div class="logo">üéÆ</div>
            <h1><%= locals.selectedGenre ? selectedGenre.name : 'Game Library' %></h1>
            <p class="subtitle"><%= locals.selectedGenre ? `Browse ${selectedGenre.name} games` : 'Browse your entire collection' %></p>
            <div class="header-actions">
                <% if (locals.selectedGenre) { %>
                    <a href="/genres" class="back-link">‚Üê Back to Genres</a>
                <% } else { %>
                    <a href="/" class="back-link">‚Üê Back to Home</a>
                <% } %>
                <a href="/games/add" class="add-btn">+ Add Game</a>
            </div>
        </header>
        
        <% if (locals.gameAdded) { %>
            <div class="success-message">
                <span class="success-icon">‚úî</span>
                <p>Game added successfully!</p>
            </div>
        <% } %>
        
        <% if (locals.gameEdited) { %>
            <div class="success-message">
                <span class="success-icon">‚úî</span>
                <p>Game updated successfully!</p>
            </div>
        <% } %>
        
        <% if (locals.gameDeleted) { %>
            <div class="success-message">
                <span class="success-icon">‚úî</span>
                <p>Game deleted successfully!</p>
            </div>
        <% } %>
        
        <div class="games-grid">
            <% if (locals.games && games.length > 0) { %>
                <% games.forEach((game) => { %>
                    <div class="game-card">
                        <% if (game.imageUrl) { %>
                            <div class="image">
                                <img src="<%= game.imageUrl %>" alt="<%= game.description || game.title %>">
                            </div>
                        <% } %>
                        <div class="text">
                            <h2 class="title"><%= game.title %></h2>
                            <% if (game.description) { %>
                                <p class="description"><%= game.description %></p>
                            <% } %>
                            <% if (game.genres && game.genres.length > 0) { %>
                                <div class="genres">
                                    <% game.genres.forEach((genre) => { %>
                                        <a class="genre" href="/genres/<%= genre.id %>"><%= genre.name %></a>
                                    <% }); %>
                                </div>
                            <% } %>
                            <% if (game.developer) { %>
                                <p class="developer">Developer: <%= game.developer %></p>
                            <% } %>
                            <% if (game.year) { %>
                                <p class="year">Year: <%= game.year %></p>
                            <% } %>
                            <% if (game.price) { %>
                                <p class="price">$<%= game.price %></p>
                            <% } %>
                        </div>
                        <div class="game-controls">
                            <a href="/games/<%= game.id %>/edit" class="control-btn edit-btn">Edit</a>
                            <a href="/games/<%= game.id %>/delete" class="control-btn delete-btn">Delete</a>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="no-games">No games found in the inventory.</p>
            <% } %>
        </div>
        
        <footer>
            <p>&copy; 2025 Game Inventory. All rights reserved.</p>
        </footer>
    </div>
</body>
</html>